<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:id="@+id/equipment_fragment_tv1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/white"/>

    <RelativeLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/home_bule"
            android:layout_below="@+id/equipment_fragment_tv1">

        <ImageView
                android:id="@+id/equipment_fragment_left_iv"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@drawable/icon_sbxx_dbsb"/>

        <TextView
                android:id="@+id/equipment_fragment_left_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/equipment_fragment_left_iv"
                android:gravity="center_vertical"
                android:text="电能表设备"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_15"/>

        <ImageView
                android:id="@+id/equipment_fragment_right_iv"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@drawable/icon_sbxx_more"/>

        <TextView
                android:id="@+id/equipment_fragment_right_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/equipment_fragment_right_iv"
                android:gravity="center_vertical"
                android:text="测试电表3"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_15"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/equipment_fragment_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linear1"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>