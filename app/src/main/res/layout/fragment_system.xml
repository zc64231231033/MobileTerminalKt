<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/system_fragment_rel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:background="@color/home_bule">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_xtcs_srmm_title"/>
    </RelativeLayout>

    <ImageView
            android:id="@+id/system_fragment_img1"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@+id/system_fragment_rel"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_50"
            android:background="@drawable/icon_xtcs_srmm_user"/>

    <ImageView
            android:id="@+id/system_fragment_img2"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignLeft="@+id/system_fragment_img1"
            android:layout_below="@+id/system_fragment_img1"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/icon_xtcs_srmm_password"/>

    <EditText
            android:id="@+id/system_fragment_ed1"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_30"
            android:layout_alignLeft="@+id/system_fragment_ed2"
            android:layout_alignTop="@+id/system_fragment_img1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="用户名"
            android:textSize="@dimen/dp_15"/>

    <EditText
            android:id="@+id/system_fragment_ed2"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_30"
            android:layout_alignTop="@+id/system_fragment_img2"
            android:layout_toRightOf="@+id/system_fragment_img2"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="密码"
            android:password="true"
            android:singleLine="true"
            android:textSize="@dimen/dp_15"/>

    <Button
            android:id="@+id/enter_btn"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:layout_below="@+id/system_fragment_ed2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/system_fragment_shape"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15"/>

    <TextView
            android:id="@+id/password_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enter_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:text="忘记密码？"
            android:textSize="@dimen/dp_15"/>


</RelativeLayout>